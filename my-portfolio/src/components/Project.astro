---
export interface Props {
  title: string;
  titleLink: string;
  description: string;
  image: string;
  links?: Array<{ link: string; link_text: string }>;
}
const { title, titleLink, description, image, links } = Astro.props;
---

<div class="card mb-4 project-card">
  <div class="row g-0 align-items-center">
    <div class="col-md-4">
      <!-- Constrain the image so it doesn't get too tall -->
      <img
        src={image}
        alt={title}
        class="img-fluid rounded-start w-100"
        style="object-fit: cover; max-height: 200px;"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">
          <a
            href={titleLink}
            target="_blank"
            class="text-decoration-none text-dark"
          >
            <b>{title}</b>
          </a>
        </h3>
        <p class="card-text">{description}</p>
        {
          links && links.length > 0 && (
            <div class="mt-3 d-flex flex-wrap gap-2">
              {links.map((item) => (
                <a
                  href={item.link}
                  target="_blank"
                  class="btn btn-sm btn-outline-dark"
                >
                  {item.link_text}
                </a>
              ))}
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>

<style>
  .project-card {
    border: none;
    transition: transform 0.2s ease-in-out;
  }
  .project-card:hover {
    transform: scale(1.01);
  }
  .card-title a:hover {
    color: #0d6efd;
  }
</style>
